>>>n=int(m)*6
>>>t.left(90)
>>>t.pensize(4)
>>>t.right(y)
>>>t.forward(70)
>>>t.backward(70)
>>>t.left(y)
>>>t.pensize(3)
>>>t.right(n)
>>>t.forward(90)
>>>t.backward(90)
