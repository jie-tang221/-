>>> import turtle
>>> screen=turtle.Screen()
>>> t=turtle.Turtle()
>>> t.up()
>>> for i in range(60):
t.forward(150)
t.down()
if i%5==0:
t.forward(30)
t.up()
t.backward(180)
t.right(6)
else:
t.forward(10)
t.up()
t.backward(160)
t.right(6)


>>>x=input(‘please input hour:’)
>>>m=input(‘please input minute:’)
